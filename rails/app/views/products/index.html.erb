<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table table-hover">
<thead>
    <tr>
        <th>Name</th>
        <th>Quantity</th>
        <th>Category</th>
        <th colspan="3"></th>
    </tr>
</thead>
<tbody class="table-group-divider">
    <% @products.each do |product| %>
    <tr>
        <td onclick="window.location='<%= product_path(product) %>';">
            <%= product.name %></td>
        <td onclick="window.location='<%= product_path(product) %>';">
            <%= product.quantity %></td>
        <td onclick="window.location='<%= product_path(product) %>';">
            <%= link_to product.category.name, product.category %></td>
        <td class="text-end">
<%= link_to product do %>
  <i class="bi bi-eye"></i> Show
<% end %>
            &nbsp;|&nbsp;
<%= link_to edit_product_path(product) do %>
  <i class="bi bi-pencil"></i> Edit
<% end %>
            &nbsp;|&nbsp;
<%= link_to product_path(product), method: :delete, data: { confirm: 'Permanantly delete this Product?' } do %>
  <i class="bi bi-trash"></i> Destroy
<% end %>
        </td>
    </tr>
    <% end %>
</tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>


