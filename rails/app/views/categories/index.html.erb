<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Products</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table-group-divider">
    <% @categories.each do |category| %>
      <tr>
        <td onclick="window.location='<%= category_path(category) %>';">
            <%= category.name %></td>
        <td onclick="window.location='<%= category_path(category) %>';">
            <%= category.products_count %></td>
        <td class="text-end">
<%= link_to category do %>
  <i class="bi bi-eye"></i> Show
<% end %>
            &nbsp;|&nbsp;
<%= link_to edit_category_path(category) do %>
  <i class="bi bi-pencil"></i> Edit
<% end %>
            &nbsp;|&nbsp;
<%= link_to category, method: :delete, data: { confirm: 'Permanantly delete this Category?' } do %>
  <i class="bi bi-trash"></i> Destroy
<% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path %>
